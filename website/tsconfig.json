{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["./src/*"],
      "@entities/*": ["src/server/entities/*"],
      "@domains/*": ["src/server/domains/*"],
      "@routers/*": ["src/server/api/routers/*"],
      "@repositories/*": ["src/server/repositories/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "./jest-setup.ts",
    ".next/types/**/*.ts",
    ".eslintrc.json"
  ],
  "exclude": ["node_modules"]
}
